{
  "name": "errorshots",
  "version": "0.3.1",
  "description": "Error Shots gathers your error logs and sends to the cloud",
  "main": "index.js",
  "scripts": {
    "cm": "git-cz",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "eslint .",
    "precommit": "npm run lint",
    "prepush": "npm test",
    "test": "nyc mocha lib",
    "test:ci": "nyc mocha lib && nyc report --reporter=text-lcov | coveralls",
    "test:watch": "mocha -w lib"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "errorshots": "./index.js"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [
    "error",
    "errorshots",
    "ci",
    "error handling",
    "node",
    "travis"
  ],
  "author": "kontrollanten <alexander@width.se>",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^6.0.2",
    "@commitlint/config-conventional": "^6.0.2",
    "chai": "^4.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "eslint": "^4.15.0",
    "eslint-plugin-mocha": "^4.11.0",
    "husky": "^0.14.3",
    "mocha": "^4.1.0",
    "nyc": "^11.4.1",
    "proxyquire": "^1.8.0",
    "sinon": "^4.1.5",
    "sinon-chai": "^2.14.0"
  },
  "dependencies": {
    "s3": "^4.4.0"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "tests/mocks/*"
    ]
  }
}
