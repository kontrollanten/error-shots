{
  "name": "errorshots",
  "version": "0.2.2",
  "description": "Error Shots gathers your error logs and sends to the cloud",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "precommit": "npm run lint",
    "prepush": "npm test",
    "test": "nyc mocha lib",
    "test:ci": "nyc mocha lib && nyc report --reporter=text-lcov | coveralls",
    "test:watch": "mocha -w lib"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "errorshots": "./index.js"
  },
  "keywords": [
    "error",
    "errorshots",
    "ci",
    "error handling",
    "node",
    "travis"
  ],
  "author": "kontrollanten <alexander@width.se>",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-spies-next": "^0.9.3",
    "coveralls": "^2.13.1",
    "eslint": "^4.6.1",
    "eslint-plugin-mocha": "^4.11.0",
    "husky": "^0.14.3",
    "mocha": "^3.5.0",
    "nyc": "^11.2.1",
    "proxyquire": "^1.8.0",
    "sinon": "^4.1.5",
    "sinon-chai": "^2.14.0"
  },
  "dependencies": {
    "log-update": "^2.1.0",
    "s3": "^4.4.0"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "tests/mocks/*"
    ]
  }
}
